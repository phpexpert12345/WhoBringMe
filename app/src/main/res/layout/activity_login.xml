<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="languageModel"
            type="com.phpexpert.bringme.dtos.LanguageDtoData" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:src="@drawable/login_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/headerImage"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@{languageModel.welcome_to}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo" />

                <TextView
                    android:id="@+id/whoBringMeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/who_bring_me"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_21sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo" />

                <LinearLayout
                    android:id="@+id/layoutMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/whoBringMeText">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countyCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccpDialog_allowSearch="true"
                        app:ccpDialog_showCloseIcon="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:ccpDialog_textColor="@color/text_color"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="@color/text_color"
                        app:ccp_showFlag="true"
                        app:ccp_showFullName="false"
                        app:ccp_showNameCode="false"
                        app:ccp_showPhoneCode="true"
                        app:ccp_textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLength="14"
                        android:digits="0123456789"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColorHint="@color/colorDarkGrey"
                        android:gravity="center_vertical"
                        android:hint="@{languageModel.enter_mobile_number}"
                        android:inputType="number"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="Autofill" />

                </LinearLayout>

                <View
                    android:id="@+id/mobileView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@color/view_color"
                    app:layout_constraintTop_toBottomOf="@+id/layoutMobileNumber" />

                <RelativeLayout
                    android:id="@+id/passwordEtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/mobileView">

                    <EditText
                        android:id="@+id/passwordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical"
                        android:hint="@{languageModel.enter_password}"
                        android:textColorHint="@color/colorDarkGrey"
                        android:inputType="numberPassword"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="Autofill" />

                    <ImageView
                        android:id="@+id/eyeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/eye_close"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <View
                    android:id="@+id/passwordView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@color/view_color"
                    app:layout_constraintTop_toBottomOf="@+id/passwordEtLayout" />

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@{languageModel.forgot_password}"
                    android:textColor="@color/color_text_grey"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordView" />

                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/button_rectangle_green"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@{languageModel.login}"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/forgotPassword"
                    app:spinning_bar_color="@color/colorGreen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loginButton">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@{languageModel.don_t_have_account_yet}"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/createAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="@{languageModel.create_account}"
                        android:textColor="#00A8EC"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <View
            android:id="@+id/forgotPasswordView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone" />

        <!--<include
            android:id="@+id/forPasswordOne"
            layout="@layout/layout_forgot_password_one"
            android:visibility="visible" />
-->
        <!--<include
            android:id="@+id/forgotPasswordTwo"
            layout="@layout/layout_forgot_password_two"
            android:visibility="visible" />-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>